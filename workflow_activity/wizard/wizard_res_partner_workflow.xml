<odoo>

    <record model="ir.ui.view" id="wizard_res_partner_workflow_form">
        <field name="name">wizard.res.partner.workflow.form</field>
        <field name="model">wizard.res.partner.workflow</field>
        <field name="arch" type="xml">
            <form string="Launch plan">
                <field name="partner_id" invisible="1"/>
                <field name="plan_definition_id"/>
                <field name="type_id" invisible="1"/>
                <footer>
                    <button type="object" name="run" string="Create"
                            class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_res_partner_workflow_action"
            model="ir.actions.act_window">
        <field name="name">Add Plan definition Activity</field>
        <field name="res_model">wizard.res.partner.workflow</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_partner_id': active_id, 'type_ref':'workflow_activity.activity_workflow'}</field>
        <field name="target">new</field>
    </record>

</odoo>
