<odoo>

    <record model="ir.ui.view" id="workflow_activity_definition_form">
        <field name="name">workflow.activity.definition.form</field>
        <field name="model">workflow.activity.definition</field>
        <field name="inherit_id"
               ref="workflow_base.workflow_activity_definition_form"/>
        <field name="arch" type="xml">
            <notebook position="attributes">
                <attribute name="invisible">0</attribute>
            </notebook>
            <notebook position="inside">
                <page name="mail_activity" attrs="{'invisible': [('model', '!=', 'mail.activity')]}">
                    <group>
                        <field name="model" invisible="1"/>
                        <field name="workflow_activity_type_id" attrs="{'required': [('model', '=', 'mail.activity')]}"/>
                        <field name="activity_note"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
