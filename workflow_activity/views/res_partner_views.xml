<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_partner_form">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id"
               ref="mail.res_partner_view_form_inherit_mail"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_chatter')]" position="before">
                <button name="%(workflow_activity.wizard_res_partner_workflow_action)d"
                        type="action" string="Add Activity Plan definition"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>